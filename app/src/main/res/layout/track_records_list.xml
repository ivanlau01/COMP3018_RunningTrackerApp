<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="false"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:clickable="false"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/dataView"
                android:clickable="false"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/trackDate"
                    android:fontFamily="@font/robotobolditallic"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_margin="10dp"
                    android:text="Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/trackUsername"
                    android:fontFamily="@font/robotobolditallic"
                    android:layout_margin="10dp"
                    android:text="Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/trackHeight"
                    android:fontFamily="@font/robotobolditallic"
                    android:layout_margin="10dp"
                    android:text="Height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/trackWeight"
                    android:fontFamily="@font/robotobolditallic"
                    android:layout_margin="10dp"
                    android:text="Weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/trackDistance"
                    android:fontFamily="@font/robotobolditallic"
                    android:layout_margin="10dp"
                    android:text="Total Distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/trackTime"
                    android:fontFamily="@font/robotobolditallic"
                    android:layout_margin="10dp"
                    android:text="Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/trackAvgSpeed"
                    android:fontFamily="@font/robotobolditallic"
                    android:layout_margin="10dp"
                    android:text="Average Speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/trackMaxSpeed"
                    android:fontFamily="@font/robotobolditallic"
                    android:layout_margin="10dp"
                    android:text="Max Speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/trackComment"
                    android:fontFamily="@font/robotobolditallic"
                    android:layout_margin="10dp"
                    android:text="Comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>